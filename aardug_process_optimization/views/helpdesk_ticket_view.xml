<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="helpdesk_tickets_view_search_inheit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name']" position="before">
                <field name="x_aa_po_code"/>
            </xpath>
        </field>
    </record>
	<record id="helpdesk_ticket_view_form_inherit_helpdesk_timesheet_inherit_optimization_view"
			model="ir.ui.view">
		<field name="name">helpdesk.ticket.process.optimization</field>
		<field name="model">helpdesk.ticket</field>
		<field name="inherit_id"
			   ref="helpdesk_timesheet.helpdesk_ticket_view_form_inherit_helpdesk_timesheet"/>
		<field name="arch" type="xml">
			<field name="name" position="before">
                <field name="x_aa_po_code" class="oe_inline" />
                <label for="x_aa_po_code" string=" - " class="oe_inline" />
            </field>
			<xpath expr="//field[@name='tag_ids']" position="after">
				<field name="x_aa_po_ticket_alias"/>
                <field name="x_aa_po_customer_company_id"/>
			</xpath>
			<xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="readonly">0</attribute>
			</xpath>
			<xpath expr="//field[@name='project_id']" position="after">
				<field name="_related_task_ids" invisible="1"/>
                <field name="task_id"
					   context="{'default_project_id': project_id, 'default_partner_id': partner_id}"
					   invisible="0" widget="task_with_hours"/>
				<button type="object" name="create_task" string="Create Task" cols="2" colspan="2"/>
			</xpath>
			<xpath expr="//page[@name='timesheets']" position="after">
				<page string="Odoo klantinfo">
					<group>
						<group>
                    		<field name="x_aa_po_odoo_version"/>
                    		<field name="x_aa_po_aardug_responsible"/>
                    		<field name="x_aa_po_aardug_project_leader"/>
						</group>
						<group>
							<field name="x_aa_po_hosting"/>
                    		<field name="x_aa_po_project"/>
                    		<field name="x_aa_po_odoo_info"/>
						</group>
					</group>
                </page>
			</xpath>
		</field>
	</record>
</odoo>
