<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="crm_case_kanban_view_leads_inherit">
            <field name="name">CRM - Leads Kanban Inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                <div class="o_kanban_record_title oe_kanban_details" position="replace">
                    <div class="o_kanban_record_title">
                        <strong><field name="partner_id"/></strong>
                    </div>
                </div>
                <span t-esc="record.partner_id.value" position="replace">
                    <field name="name"/>
                </span>
            </field>
        </record>

        <record model="ir.ui.view" id="quick_create_opportunity_form_inherit">
            <field name="name">crm.lead.form.quick_create.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
            <field name="arch" type="xml">
                <label for="expected_revenue" position="replace"/>
                <field name="expected_revenue" position="replace"/>
                <field name="company_currency" position="before">
                    <field name="probability"/>
                    <field name="date_deadline"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
