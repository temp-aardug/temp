<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_set_form_inherit" model="ir.ui.view">
            <field name="name">product.set.form</field>
            <field name="model">product.set</field>
            <field name="inherit_id" ref="sale_product_set.view_product_set_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='set_line_ids']" position="attributes">
                    <attribute name="widget">section_and_note_one2many</attribute>
                </xpath>
                <xpath expr="//field[@name='set_line_ids']/tree" position="replace">
                    <tree string="Product set lines" editable="bottom">
                        <control>
                            <create name="add_product_control" string="Add a product"/>
                            <create name="add_section_control" string="Add a section"
                                    context="{'default_display_type': 'line_section'}"/>
                            <create name="add_note_control" string="Add a note"
                                    context="{'default_display_type': 'line_note'}"/>
                        </control>
                        <field name="display_type" invisible="1"/>
                        <field name="sequence" widget="handle"/>
                        <field name="product_id"
                               attrs="{'required': [('display_type', '=', False)]}"
                               domain="[('sale_ok', '=', True)]"/>
                        <field name="name" widget="section_and_note_text"/>
                        <field name="quantity"/>
                        <field name="x_aa_ec_fixed"/>
                        <field name="discount"
                               groups="product.group_discount_per_so_line"/>
                    </tree>
                </xpath>
            </field>
        </record>
        <record id="view_product_set_line_tree_inherit" model="ir.ui.view">
            <field name="name">product.set.line.tree</field>
            <field name="model">product.set.line</field>
            <field name="inherit_id" ref="sale_product_set.view_product_set_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quantity']" position="after">
                    <field name="x_aa_ec_fixed"/>
                </xpath>
            </field>
        </record>
        <record id="product_set_add_form_view_inh" model="ir.ui.view">
            <field name="name">product.set.add.form.view</field>
            <field name="inherit_id" ref="sale_product_set.product_set_add_form_view"/>
            <field name="model">product.set.add</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_set_line_ids']" position="attributes">
                    <attribute name="widget">section_and_note_one2many</attribute>
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//form//tree" position="replace">
                    <tree string="Product set lines" readonly="1">
                        <field name="display_type" invisible="1"/>
                        <field name="sequence" widget="handle"/>
                        <field name="product_id"
                               attrs="{'required': [('display_type', '=', False)]}"
                               domain="[('sale_ok', '=', True)]"
                        />
                        <field name="name" widget="section_and_note_text"/>
                        <field name="quantity"/>
                        <field name="x_aa_ec_fixed"/>
                        <field name="discount"
                               groups="product.group_discount_per_so_line"/>
                    </tree>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
